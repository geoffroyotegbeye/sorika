// backend/prisma/schema.prisma

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// 1. L'Utilisateur (Le g√©rant)
model User {
  id            String       @id @default(uuid())
  email         String       @unique
  password      String
  firstName     String?
  lastName      String?
  isSuperAdmin  Boolean      @default(false) // Super Admin avec tous les droits
  memberships   Membership[] // Un utilisateur peut appartenir √† plusieurs entreprises
  createdAt     DateTime     @default(now())
}

// 2. Table de liaison (Pour le multi-entreprises)
model Membership {
  id        String   @id @default(uuid())
  role      String   @default("OWNER") // OWNER, ADMIN, ou STAFF
  userId    String
  companyId String
  user      User     @relation(fields: [userId], references: [id])
  company   Company  @relation(fields: [companyId], references: [id])

  @@unique([userId, companyId]) // Un utilisateur ne peut pas √™tre membre deux fois de la m√™me entreprise
}

// 3. L'Entreprise (Le "Tenant")
model Company {
  id           String   @id @default(uuid())
  name         String
  slug         String   @unique // Utilis√© pour l'URL : sorika.bj/foodirect
  logo         String?
  phoneNumber  String?  // Tr√®s important pour le bouton WhatsApp
  address      String?
  modules      String[] @default(["LANDING_PAGE"]) // Liste des modules activ√©s
  globalElements Json   @default("[]") // √âl√©ments globaux (navbar, footer) affich√©s sur toutes les pages
  
  members      Membership[]
  landingPage  LandingPage?
  pages        Page[]
  products     Product[]
  createdAt    DateTime     @default(now())
}

// 4. Module Landing Page (No-Code) - Syst√®me de Design Professionnel
model LandingPage {
  id            String   @id @default(uuid())
  companyId     String   @unique
  company       Company  @relation(fields: [companyId], references: [id])
  
  // Template & Design System
  templateName  String   @default("modern") // modern, classic, minimal, creative, business
  
  // Syst√®me de couleurs (Palette compl√®te)
  theme         Json?    @default("{\"colors\":{\"primary\":\"#3b82f6\",\"secondary\":\"#8b5cf6\",\"accent\":\"#f59e0b\",\"background\":\"#ffffff\",\"text\":\"#1e293b\",\"muted\":\"#64748b\"},\"fonts\":{\"heading\":\"Inter\",\"body\":\"Inter\"},\"spacing\":\"comfortable\",\"borderRadius\":\"medium\",\"animations\":true}")
  
  // Sections du site (Structure compl√®te)
  sections      Json?    @default("{\"hero\":{\"enabled\":true,\"type\":\"hero\",\"content\":{\"title\":\"Bienvenue\",\"subtitle\":\"D√©couvrez nos services\",\"buttonText\":\"Commencer\",\"buttonLink\":\"#contact\",\"backgroundType\":\"gradient\",\"backgroundValue\":\"from-blue-600 to-purple-600\",\"imageUrl\":\"\",\"layout\":\"center\"}},\"features\":{\"enabled\":true,\"type\":\"features\",\"content\":{\"title\":\"Nos fonctionnalit√©s\",\"subtitle\":\"Ce qui nous rend uniques\",\"layout\":\"grid\",\"columns\":3,\"items\":[{\"icon\":\"üöÄ\",\"title\":\"Rapide\",\"description\":\"Performance optimale\"},{\"icon\":\"üíé\",\"title\":\"Qualit√©\",\"description\":\"Service premium\"},{\"icon\":\"üéØ\",\"title\":\"Pr√©cis\",\"description\":\"R√©sultats garantis\"}]}}}")
  
  // SEO & M√©tadonn√©es
  seo           Json?    @default("{\"title\":\"\",\"description\":\"\",\"keywords\":[],\"ogImage\":\"\"}")
  
  // Param√®tres avanc√©s
  customCSS     String?  @db.Text
  customJS      String?  @db.Text
  favicon       String?
  
  isActive      Boolean  @default(true)
  publishedAt   DateTime?
  
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

// 5. Pages (Syst√®me multi-pages SPA)
model Page {
  id            String   @id @default(uuid())
  slug          String   // URL: /slug
  title         String
  description   String?  @db.Text
  
  // Contenu de la page
  elements      Json     @default("[]")
  // Format: [{ id, type, tag, content, styles: { desktop, tablet, mobile }, children: [] }]
  
  // SEO
  metaTitle     String?
  metaDescription String? @db.Text
  ogImage       String?
  
  // Statut
  isHomePage    Boolean  @default(false)
  isPublished   Boolean  @default(false)
  publishedAt   DateTime?
  
  // Relations
  companyId     String
  company       Company  @relation(fields: [companyId], references: [id], onDelete: Cascade)
  
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  @@unique([companyId, slug])
  @@index([companyId, isHomePage])
}

// 6. Module Produits (Pour le menu/catalogue)
model Product {
  id          String   @id @default(uuid())
  name        String
  description String?
  price       Float
  imageUrl    String?
  category    String?  // ex: "Entr√©es", "Boissons"
  companyId   String
  company     Company  @relation(fields: [companyId], references: [id])
  
  isActive    Boolean  @default(true)
}